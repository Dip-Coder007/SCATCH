<%- include('./partials/header') %>

<% if (user.cart.length === 0) { %>
  <div class="w-full h-screen flex justify-center items-center text-2xl text-gray-600">
    Your cart is empty.
  </div>
<% } else { %>
  <% user.cart.forEach(function(item) { %>
    <div class="w-full flex items-start px-20 py-10 gap-10">
      <!-- Product Section -->
      <div class="w-[30%] rounded-md overflow-hidden shadow-md">
        <div class="w-full h-80 flex justify-center items-center bg-[<%= item.bgcolor %>]">
          <img class="h-[18rem]" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="">
        </div>
        <div class="w-full flex justify-between px-5 py-4 bg-[<%= item.panelcolor %>] text-[<%= item.textcolor %>]">
          <h3 class="text-2xl font-semibold"><%= item.name %></h3>
          <div class="flex items-center gap-2">
            <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
            <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
            <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
          </div>
        </div>
        <div class="flex items-center justify-between px-5 py-3 text-white bg-[<%= item.textcolor %>]">
          <h4 class="text-lg font-semibold">Discount</h4>
          <h2 class="text-lg">₹ <%= item.discount %></h2>
        </div>
      </div>

      <!-- Price Summary Section -->
      <div class="w-[70%]">
        <h3 class="text-2xl font-bold mb-5">Price Breakdown</h3>
        <div class="px-10 space-y-3">
          <div class="flex">
            <h4 class="w-1/3 font-medium">Total MRP</h4>
            <h4>₹ <%= item.price %></h4>
          </div>
          <div class="flex">
            <h4 class="w-1/3 font-medium">Discount on MRP</h4>
            <h4>- ₹ <%= item.discount %></h4>
          </div>
          <div class="flex">
            <h4 class="w-1/3 font-medium">Platform Fee</h4>
            <h4>₹ 20</h4>
          </div>
          <div class="flex">
            <h4 class="w-1/3 font-medium">Shipping Fee</h4>
            <h4>FREE</h4>
          </div>
        </div>

        <div class="w-full h-[1px] bg-black mt-10"></div>

        <div class="flex mt-5 text-xl">
          <h3 class="w-1/3 font-semibold">Total (for this item)</h3>
          <h3 class="font-bold text-green-600">
            ₹ <%= Number(item.price) - Number(item.discount) + 20 %>
          </h3>
        </div>
      </div>
    </div>
  <% }) %>

  <!-- GRAND TOTAL SECTION -->
  <div class="w-full flex justify-end px-20 pb-10 mt-10">
    <div class="text-right">
      <h3 class="text-2xl font-semibold">Grand Total:</h3>
      <h2 class="text-3xl font-bold text-green-600">₹ <%= total %></h2>
    </div>
  </div>
<% } %>

<%- include('./partials/footer') %>
